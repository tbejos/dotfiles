URxvt.perl-ext-common: default,matcher

! Clickable URLs
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5

URxvt.font: xft:Droid Sans Mono for Powerline:size=12

! scroll with mouse wheel + page up
URxvt*scrollWithBuffer: true

! scroll back to bottom on keypress
URxvt*scrollTtyKeypress: true

! Transparency
URxvt.transparent: true
URxvt.shading: 40 

! Disable Scrollbar
URxvt.scrollBar: false

! Base16 Google Dark
! Scheme: Seth Wright (http://sethawright.com)

#define base00 #1d1f21
#define trans00 #731d1f21
#define base01 #282a2e
#define base02 #373b41
#define base03 #969896
#define base04 #b4b7b4
#define base05 #c5c8c6
#define base06 #e0e0e0
#define base07 #ffffff
#define base08 #CC342B
#define base09 #F96A38
#define base0A #FBA922
#define base0B #198844
#define base0C #3971ED
#define base0D #3971ED
#define base0E #A36AC7
#define base0F #3971ED

*.foreground:   base05
*.background:   base00
*.cursorColor:  base05

! black
*.color0:       base00
*.color8:       base03

! red
*.color1:       base08
Settings
! green
*.color2:       base0B
*.color10:      base0B

! yellow
*.color3:       base0A
*.color11:      base0A

! blue
*.color4:       base0D
*.color12:      base0D

! magenta
*.color5:       base0E
*.color13:      base0E

! cyan
*.color6:       base0C
*.color14:      base0C

! white
*.color7:       base05
*.color15:      base07

! Note: colors beyond 15 might not be loaded (e.g., xterm, urxvt),
! use 'shell' template to set these if necessary
*.color16:      base09
*.color17:      base0F
*.color18:      base01
*.color19:      base02
*.color20:      base04
*.color21:      base06

!----------------------------------------
! ROFI Color Theme
!----------------------------------------
rofi.color-enabled: true
rofi.color-window: trans00, trans00, trans00
rofi.color-normal: trans00, base05, trans00, trans00, base0E
rofi.color-active: trans00, base05, trans00, trans00, base0D
rofi.color-urgent: trans00, base05, trans00, trans00, base08

rofi.width:             100
rofi.hide-scrollbar:    true
rofi.lines:             5
rofi.bw:                0
rofi.eh:                2
rofi.padding: 470
